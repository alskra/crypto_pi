+page('UI-kit')
  +b.MAIN
    +b.container-fluid.max-w-md.max-w-lg
      +b.formatted-text
        h1 #{pkg.description}
        h2 Pages list
        ol
          if pkg.repository
            li
              a(href=pkg.repository target='_blank') Repository #[small (#{pkg.repository})]
          li
            a(href='ui-kit.html') UI-kit #[small (ui-kit.html)]
            ol
              li
                a(href='svg-symbols-demo-page.html') SVG-symbols #[small (svg-symbols-demo-page.html)]
          each page in pagesList
            li
              a(href=page.url) #{page.title} #[small (#{page.url})]
